<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>AddLink</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/resources/docker</directory>
      <outputDirectory>AddLinkVM/docker</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/resources/AddLinkVM</directory>
      <outputDirectory>AddLinkVM</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/resources/CustomAppIntegration</directory>
      <outputDirectory>CustomAppIntegration</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>